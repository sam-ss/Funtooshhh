<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:uikit="clr-namespace:UXDivers.Artina.Grial;assembly=UXDivers.Artina.Grial"
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
	x:Class="UXDivers.Artina.Grial.Views.Dashboards.PricingCalculatorResultPage"
	Title="Result"
  xmlns:views="clr-namespace:UXDivers.Artina.Grial;assembly=UXDivers.Artina.Grial"
  BackgroundColor="#DFDFDF">

  <ListView 
		SeparatorVisibility="Default" 
		SeparatorColor="#DFDFDF"
		ItemsSource="{Binding PostsList}"
		ItemTapped="OnItemTapped"
		RowHeight="450"
		HasUnevenRows="false">

		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<views:ArticleVariantItemTemplate/>
				</ViewCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>

</ContentPage>