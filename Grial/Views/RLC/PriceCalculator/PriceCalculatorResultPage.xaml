      <artina:Button
        Style="{DynamicResource ReverseActionButtonStyle}"
        Text="Recalculate"  Clicked="OnRecalculateButtonClicked"
					/>
    </Grid>
  </Grid>-->
    </ContentPage.Content>
</ContentPage>