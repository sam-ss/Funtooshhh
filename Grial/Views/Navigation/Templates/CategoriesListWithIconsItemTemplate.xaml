<?xml version="1.0" encoding="UTF-8"?>
<ContentView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="UXDivers.Artina.Grial.CategoriesListWithIconsItemTemplate"
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
	xmlns:commonViews="clr-namespace:UXDivers.Artina.Grial;assembly=UXDivers.Artina.Grial">

  <StackLayout
    Spacing="0"
    Padding="0"
    HorizontalOptions="Fill" >

    <StackLayout
      Spacing="20"
      Padding="0, 0, 0, 0"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand"
      Orientation="Horizontal" >

      <BoxView
        BackgroundColor="{ Binding BackgroundColor }"
        WidthRequest="10"/>

      <Label
        Text="{ Binding Icon }"
        FontSize="30"
        Style="{ StaticResource FontIcon }"
        TextColor="#FFC497"
        HorizontalOptions="Start"
        WidthRequest="30"
        VerticalTextAlignment="Center"
        HorizontalTextAlignment="Center"
				/>
      <StackLayout
              Padding="0, 0, 0, 0"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand"
              Orientation="Vertical" >
        <Label
					Text="{ Binding Name }"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Center"
				/>
        <Label
           FontSize="10"
        Text="{ Binding Country }"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center"
				/>
      </StackLayout>
      <commonViews:Badge
      HorizontalOptions="End"
      BadgeText="{ Binding Rating }"
      BadgeTextColor="#FFF"
      BadgeBackgroundColor="{ Binding RatingBackgroundColor }"
      VerticalOptions="Center"
      TranslationX="8"
      TranslationY="2"
				/>

      <Label
        WidthRequest="20"
        HorizontalOptions="End"
        Text="&#xf105;"
        TextColor="{ Binding BackgroundColor }"
        Style="{ DynamicResource MainMenu_Right_Chevron_Style }" />

    </StackLayout>

    <!-- Bottom Line -->
    <StackLayout
      BackgroundColor="{ Binding BackgroundColor }"
      HeightRequest="1"
      VerticalOptions="End"
      Opacity=".5"/>
  </StackLayout>

</ContentView>